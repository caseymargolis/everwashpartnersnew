---
layout: base.njk
pageStyle: blog
---

<!-- Article Hero Section -->
<section class="hero hero-blog">
  <div class="container">
    <div class="row justify-content-center text-center">
      <div class="col-lg-8">
        <h1>{{ title }}</h1>
        
        <!-- Author Information -->
        <div class="article-author-info">
          <div class="author-avatar">
            <img class="avatar" src="" alt="{{ author }}" data-author="{{ author }}">
          </div>
          <div class="author-details">
            <p class="author-name">By {{ author | default("EverWash Team") }}</p>
            <p class="article-date">{{ date | postDate }}</p>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- Curve Divider -->
  <div class="curve">
    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1440 80" preserveAspectRatio="none">
      <path fill="white" d="M0,0 C720,40 720,40 1440,0 L1440,80 L0,80 Z"></path>
    </svg>
  </div>
</section>

<!-- Article Content Section -->
<section class="article-content-section">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-lg-8">

        {% if image %}
        <div class="article-featured-image mb-5">
          <img src="{{ image }}" alt="{{ title }}" class="img-fluid">
        </div>
        {% endif %}
        
        <div class="article-content">
          {{ content | safe }}
        </div>
        
        <!-- Combined Author & EverWash Section -->
        <div class="author-everwash-section mt-5">
          <!-- About the Author -->
          <h2>About the Author</h2>
          <div class="author-bio-container">
            <img class="avatar bio-avatar" src="" alt="{{ author }}" data-author="{{ author }}">
            <div class="author-bio-text">
              <p class="author-bio-content" data-author="{{ author }}"></p>
              <a class="author-social-media" href="" target="_blank" data-author="{{ author }}">
                <i class="fab fa-linkedin"></i>
                <span>Follow {{ author }} on LinkedIn</span>
              </a>
            </div>
          </div>

          <hr>

          <!-- About EverWash -->
          <h2>About EverWash</h2>
          <p>
            Get unlimited car washes for one low monthly price - all from the palm of your hand. EverWash partners with your
            neighborhood's local car wash to bring you unlimited-use, all-you-can wash, monthly membership plans starting as low as
            $9.95 per month.
          </p>
          <p>
            Stop paying every time you get your car washed. Discover a better way to wash your car. An unlimited-use monthly car
            wash membership is the most cost-effective way to keep your car looking its best every single day. It's like a gym
            membership for your car!
          </p>
          <p>
            With nearly 1,000 locations nationwide, EverWash has a car wash and membership plan for you. What makes
            EverWash great?
          </p>
          <ul class="everwash-benefits">
            <li><strong>Save Money</strong> - Unlimited washes at a fraction of the pay-per-wash price.</li>
            <li><strong>Unlimited Use</strong> - Wash your car as often as you want. Wash every single day if you'd like!</li>
            <li><strong>Membership Options</strong> - Choose a local car wash & unlimited plan that works best for you.</li>
            <li><strong>Month-To-Month Memberships</strong> - Cancel anytime. No commitment. No strings attached.</li>
          </ul>
          <p>
            EverWash has been featured in major consumer and industry publications and media. Download the EverWash
            app at the App Store or Google Play and start saving today!
          </p>
          
          <!-- App Store Links -->
          <div class="app-store-links mt-4">
            <a href="https://apps.apple.com/us/app/everwash/id962949509?itsct=apps_box_badge&amp;itscg=30200"
               style="display: inline-block; border-radius: 13px; width: 160px; height: 83px;">
              <img src="https://tools.applemediaservices.com/api/badges/download-on-the-app-store/black/en-us?size=250x83&amp;releaseDate=1427500800&h=156920f74ce14a0d9f20433eed2d3a44"
                   alt="Download on the App Store"
                   style="border-radius: 13px; width: 160px; height: 83px"/>
            </a>
            <a href="https://play.google.com/store/apps/details?id=com.everwash.carclub&pcampaignid=pcampaignidMKT-Other-global-all-co-prtnr-py-PartBadge-Mar2515-1">
              <img alt="Get it on Google Play"
                   style="border-radius: 13px; width: auto; height: 81px"
                   src="https://play.google.com/intl/en_us/badges/static/images/badges/en_badge_web_generic.png"/>
            </a>
          </div>
        </div>
        
        <!-- Back to Blog -->
        <div class="text-center mt-5">
          <a href="/blog/" class="btn__secondary">
            <span>‚Üê Back to Blog</span>
          </a>
        </div>
      </div>
    </div>
  </div>
</section>

<!-- Related Articles Section -->
<section id="relatedArticles" class="related-articles-section">
  <div class="container">
    <h2>Related Articles</h2>
    <div class="row">
      {% set related_posts = [] %}
      {% set excluded_tags = ['post', 'blog', 'featured', 'newsroom'] %}
      {% if tags.includes("newsroom") %}
        {% set articlePool = collections.newsroom %}
      {% else %}
        {% set articlePool = collections.blog %}
      {% endif %}
      
      <!-- Find posts with matching tags -->
      {% for tag in tags %}
        {% for post in articlePool %}
          {% if tag in post.data.tags and tag not in excluded_tags and post.url != page.url %}
            {% if post not in related_posts and related_posts.length < 3 %}
              {% set related_posts = (related_posts.push(post), related_posts) %}
            {% endif %}
          {% endif %}
        {% endfor %}
      {% endfor %}
      
      <!-- Fill remaining slots with recent posts -->
      {% for post in articlePool | reverse %}
        {% if post not in related_posts and post.url != page.url and related_posts.length < 3 %}
          {% set related_posts = (related_posts.push(post), related_posts) %}
        {% endif %}
      {% endfor %}
      
      <!-- Display related posts -->
      {% for post in related_posts %}
      <div class="col-lg-4 col-md-6 mb-4">
        <a href="{{ post.url }}" class="article-card" style="text-decoration: none; color: inherit; display: block;">
          <img src="{{ post.data.image | default('/assets/images/hero-bg-new.png') }}" alt="{{ post.data.title }}" class="article-image">
          <div class="article-card-content">
            <p class="article-date">{{ post.data.date | postDate }}</p>
            <h4>{{ post.data.title }}</h4>
            <p class="article-excerpt">{{ post.data.description | default(post.content | excerpt | safe) }}</p>
          </div>
        </a>
      </div>
      {% endfor %}
    </div>
  </div>
</section>

<!-- Latest Stories Section -->
<section id="latestStories" class="latest-stories-section">
  <div class="container">
    <h2>Latest Stories</h2>
    <div class="row">
      {% if tags.includes("newsroom") %}
        {% set articlePool = collections.newsroom | reverse %}
      {% else %}
        {% set articlePool = collections.blog | reverse %}
      {% endif %}
      
      {% set latestCount = 0 %}
      {%- for post in articlePool -%}
      {% if post.url != page.url and latestCount < 4 %}
      <div class="col-lg-6 col-md-6 mb-4">
        <a href="{{ post.url }}" class="latest-story-card" style="text-decoration: none; color: inherit;">
          <div class="row align-items-center">
            <div class="col-4">
              <img src="{{ post.data.image | default('/assets/images/hero-bg-new.png') }}" alt="{{ post.data.title }}" class="latest-story-image">
            </div>
            <div class="col-8">
              <div class="latest-story-content">
                <p class="article-date">{{ post.data.date | postDate }}</p>
                <h4>{{ post.data.title }}</h4>
              </div>
            </div>
          </div>
        </a>
      </div>
      {% set latestCount = latestCount + 1 %}
      {% endif %}
      {%- endfor -%}
    </div>
  </div>
</section>